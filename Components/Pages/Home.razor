@page "/"

<PageTitle>Dashboard | Ana Sayfa</PageTitle>

<div class="p-4">
    <div class="welcome-banner p-5 mb-4 rounded-4 text-white" style="background: linear-gradient(135deg, #0d47a1 0%, #4285f4 100%);">
        <h1 class="display-5 fw-bold">Hoş Geldiniz, Sueda Hanım!</h1>
        <p class="fs-4">Bugün sistemde bekleyen 3 yeni rapor ve 2 proje güncellemesi bulunuyor.</p>
        <button class="btn btn-light btn-lg text-primary fw-bold" type="button">Özet Raporu Gör</button>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-3 text-primary me-3">
                        <span class="bi bi-building fs-3"></span>
                    </div>
                    <div>
                        <div class="text-muted small">Aktif Projeler</div>
                        <div class="h4 mb-0 fw-bold">24</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-3 text-success me-3">
                        <span class="bi bi-currency-dollar fs-3"></span>
                    </div>
                    <div>
                        <div class="text-muted small">Aylık Gelir</div>
                        <div class="h4 mb-0 fw-bold">₺2.4M</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-3 text-warning me-3">
                        <span class="bi bi-people fs-3"></span>
                    </div>
                    <div>
                        <div class="text-muted small">Yeni Başvurular</div>
                        <div class="h4 mb-0 fw-bold">156</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-danger bg-opacity-10 p-3 rounded-3 text-danger me-3">
                        <span class="bi bi-exclamation-triangle fs-3"></span>
                    </div>
                    <div>
                        <div class="text-muted small">Kritik Uyarılar</div>
                        <div class="h4 mb-0 fw-bold">2</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
