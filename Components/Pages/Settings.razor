@page "/settings"

<div class="p-4">
    <h1 class="mb-4">Sistem Ayarları</h1>
    
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-4">Profil Bilgileri</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" class="form-control" value="Sueda Akça" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">E-posta</label>
                    <input type="email" class="form-control" value="sueda@example.com" />
                </div>
                <div class="col-md-12">
                    <label class="form-label">Bildirim Tercihleri</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" checked id="check1">
                        <label class="form-check-label" for="check1">Yeni raporlandığında e-posta gönder</label>
                    </div>
                </div>
                <div class="col-md-12 mt-4">
                    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
                    <button class="btn btn-outline-danger ms-2">Hesabı Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>
