@page "/search"
@using BlazorWebApp.Services
@using BlazorWebApp.Models
@inject PoolService PoolService
@inject NavigationManager NavManager

<PageTitle>Arama Sonuçları: @q</PageTitle>

<div class="h-100 w-100 bg-light overflow-auto p-4">
    <div class="container" style="max-width: 800px;">
        <div class="mb-4">
            <h3 class="fw-bold mb-1">Arama Sonuçları</h3>
            <p class="text-muted">"@q" için @results.Count sonuç bulundu.</p>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Aranıyor...</p>
            </div>
        }
        else if (!results.Any())
        {
            <div class="text-center py-5 bg-white rounded-3 shadow-sm">
                <i class="bi bi-search display-1 text-muted opacity-25"></i>
                <h4 class="mt-3 text-muted">Sonuç Bulunamadı</h4>
                <p>Lütfen farklı anahtar kelimelerle tekrar deneyin.</p>
            </div>
        }
        else
        {
            <div class="list-group shadow-sm rounded-3 overflow-hidden">
                @foreach (var item in results)
                {
                    <a href="@item.Url" class="list-group-item list-group-item-action p-3 border-0 border-bottom bg-white search-item">
                        <div class="d-flex align-items-center">
                            <div class="icon-box bg-light text-primary rounded-circle me-3 flex-shrink-0" style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi @item.Icon fs-4"></i>
                            </div>
                            <div class="flex-grow-1 min-w-0">
                                <div class="d-flex w-100 justify-content-between align-items-center mb-1">
                                    <h6 class="mb-0 fw-bold text-dark text-truncate">@item.Title</h6>
                                    <span class="badge bg-secondary-subtle text-secondary rounded-pill ms-2 flex-shrink-0" style="font-weight: 500;">@item.Type</span>
                                </div>
                                <small class="text-muted d-block text-truncate">@item.Subtitle</small>
                            </div>
                            <i class="bi bi-chevron-right text-muted ms-3"></i>
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>

<style>
    .search-item:hover { background-color: #f8f9fa !important; }
    .search-item:last-child { border-bottom: none !important; }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? q { get; set; }

    private List<SearchResultItem> results = new();
    private bool isLoading = false;
    private string lastQuery = "";

    protected override async Task OnParametersSetAsync()
    {
        if (q == lastQuery) return;
        lastQuery = q ?? "";
        
        isLoading = true;
        
        // Minimal delay to allow UI to render generic loading state
        await Task.Yield();
        
        if (!string.IsNullOrWhiteSpace(q))
        {
            results = await PoolService.SearchGlobalAsync(q);
        }
        else 
        {
            results.Clear();
        }
        
        isLoading = false;
    }
}
