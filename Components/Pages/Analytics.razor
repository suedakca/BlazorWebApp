@page "/analytics"
@using BlazorWebApp.Services
@using BlazorWebApp.Models
@inject PoolService PoolService
@inject TabService TabService

<PageTitle>Analiz Görünümü | Kart Tasarımı</PageTitle>

<div class="h-100 w-100 d-flex flex-column bg-light">
    <FilterBar OnFilterChanged="HandleFilterChanged" InitialCriteria="currentCriteria" />

    <div class="analytics-content flex-grow-1 p-4 overflow-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 fw-bold text-dark">Analiz Özeti</h4>
            <div class="text-muted small">
                @if (items != null)
                {
                    <span>Toplam <b>@totalCount</b> kayıt analiz ediliyor.</span>
                }
            </div>
        </div>

        @if (isLoading)
        {
            <div class="row g-4">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="card border-0 shadow-sm skeleton-card">
                            <div class="card-body">
                                <div class="skeleton-box mb-3" style="width: 60%; height: 24px;"></div>
                                <div class="skeleton-box mb-2" style="width: 100%; height: 60px;"></div>
                                <div class="d-flex gap-2">
                                    <div class="skeleton-box" style="width: 30%; height: 20px;"></div>
                                    <div class="skeleton-box" style="width: 30%; height: 20px;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (items != null && !items.Any())
        {
            <div class="text-center p-5 bg-white rounded-4 shadow-sm">
                <span class="bi bi-search fs-1 d-block mb-3 text-muted"></span>
                <p class="text-muted">Kriterlere uygun analiz verisi bulunamadı.</p>
            </div>
        }
        else if (items != null)
        {
            <div class="row g-4">
                @foreach (var item in items)
                {
                     // Extract values safely
                     var name = GetValue(item, "Name");
                     var project = GetValue(item, "Project");
                     var priority = GetValue(item, "Priority");
                     var value = GetValue(item, "Value");
                     var customer = GetValue(item, "Customer");
                     var region = GetValue(item, "Region");
                     var assignedTo = GetValue(item, "AssignedTo");
                     var paymentStatus = GetValue(item, "PaymentStatus");
                     
                     decimal amount = 0;
                     if (decimal.TryParse(value, out var d)) amount = d;

                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="card border-0 shadow-sm analytics-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle mb-2">@project</span>
                                        <h5 class="fw-bold mb-0">@name</h5>
                                    </div>
                                    <span class="priority-tag @priority.ToLower()">@priority</span>
                                </div>

                                <div class="value-display my-4">
                                    <div class="text-muted x-small fw-bold text-uppercase">YATIRIM DEĞERİ</div>
                                    <div class="display-6 fw-bold text-dark">₺@amount.ToString("N0")</div>
                                </div>

                                <div class="details-grid mt-auto pt-3 border-top">
                                    <div class="row g-2 text-muted x-small fw-bold">
                                        <div class="col-6">
                                            <div class="mb-1"><span class="bi bi-person me-1"></span>MÜŞTERİ</div>
                                            <div class="text-dark">@customer</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-1"><span class="bi bi-geo-alt me-1"></span>BÖLGE</div>
                                            <div class="text-dark">@region</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-light border-0 px-4 py-3 d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-sm">
                                        @string.Join("", assignedTo.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(2).Select(s => s[0]))
                                    </div>
                                    <span class="small fw-medium">@assignedTo</span>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="payment-dot @paymentStatus.ToLower()"></span>
                                    <span class="x-small fw-bold">@paymentStatus</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .analytics-card {
        transition: transform 0.2s, shadow 0.2s;
        border-radius: 16px;
    }
    
    .analytics-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }

    .priority-tag {
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.65rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .priority-tag.high { background: #feeef0; color: #d93025; }
    .priority-tag.medium { background: #feefc3; color: #f29900; }
    .priority-tag.low { background: #e8f0fe; color: #1a73e8; }

    .x-small { font-size: 0.65rem; }

    .avatar-sm {
        width: 28px;
        height: 28px;
        border-radius: 8px;
        background: #1e40af; /* Darker blue (blue-800) */
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        font-weight: 600;
        box-shadow: 0 2px 4px rgba(30, 64, 175, 0.2);
    }

    .payment-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
    }
    .payment-dot.paid { background: #34a853; }
    .payment-dot.pending { background: #fbbc04; }
    .payment-dot.overdue { background: #ea4335; }

    .skeleton-card {
        border-radius: 16px;
        overflow: hidden;
    }

    .skeleton-box {
        background: linear-gradient(90deg, #f0f0f0 25%, #e8eaed 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 4px;
    }

    @@keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>

@code {
    private List<Dictionary<string, object>>? items;
    private bool isLoading = true;
    private int totalCount = 0;
    private FilterBar.FilterCriteria currentCriteria = new();

    protected override async Task OnInitializedAsync()
    {
        // If the user has visited this tab before, restore their filter settings
        var activeTab = TabService.Tabs.FirstOrDefault(t => t.IsActive);
        if (activeTab != null && activeTab.State.ContainsKey("filter_criteria"))
        {
            var savedCriteria = activeTab.State["filter_criteria"] as FilterBar.FilterCriteria;
            if (savedCriteria != null)
            {
                currentCriteria = savedCriteria;
            }
        }

        await LoadData();
    }

    private async Task HandleFilterChanged(FilterBar.FilterCriteria criteria)
    {
        currentCriteria = criteria;
        
        var activeTab = TabService.Tabs.FirstOrDefault(t => t.IsActive);
        if (activeTab != null)
        {
            // Keep the filter state in sync with the tab
            activeTab.State["filter_criteria"] = currentCriteria;
        }

        await LoadData();
    }
    
    private string GetValue(Dictionary<string, object> item, string key)
    {
        return item.ContainsKey(key) && item[key] != null ? item[key].ToString()! : "";
    }

    private async Task LoadData()
    {
        try 
        {
            isLoading = true;
            items = null;
            await Task.Delay(300); // Visual feedback
            
            // Fetch from UnifiedData (SampleDatas)
            // Limit to 50 for analytics view for now
            var result = await PoolService.GetDynamicRecordsAsync("UnifiedData", 0, 50);
            
            var allItems = result.Items;
            
            // Client-side filtering for demo
            if (!string.IsNullOrWhiteSpace(currentCriteria.Project))
            {
                allItems = allItems.Where(x => GetValue(x, "Project") == currentCriteria.Project).ToList();
            }

            if (currentCriteria.Year.HasValue)
            {
                allItems = allItems.Where(x => GetValue(x, "Year") == currentCriteria.Year.Value.ToString()).ToList();
            }

            items = allItems;
            totalCount = items.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading analytics data: {ex.Message}");
            items = new List<Dictionary<string, object>>();
        }
        finally
        {
            isLoading = false;
        }
    }
}
