@page "/reports"
@inject IJSRuntime JSRuntime

<PageTitle>Raporlama Merkezi</PageTitle>

<div class="h-100 w-100 bg-light overflow-auto">
    <div class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold mb-1 text-primary">Raporlama Merkezi</h2>
                <p class="text-muted mb-0">Detaylı analizler ve grafiksel gösterimler</p>
            </div>
            <div class="d-flex gap-2">
                 <div class="btn-group">
                    <button class="btn btn-white border shadow-sm">Günlük</button>
                    <button class="btn btn-white border shadow-sm active">Haftalık</button>
                    <button class="btn btn-white border shadow-sm">Aylık</button>
                </div>
                <button class="btn btn-primary shadow-sm"><i class="bi bi-download me-2"></i>PDF İndir</button>
            </div>
        </div>

        <!-- KPI Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-muted small fw-bold text-uppercase">Toplam Satış</div>
                            <span class="badge bg-soft-success text-success rounded-pill">+12.5%</span>
                        </div>
                        <h3 class="fw-bold mb-0">₺452,100</h3>
                        <small class="text-muted">Geçen aya göre</small>
                    </div>
                </div>
            </div>
             <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-muted small fw-bold text-uppercase">Yeni Müşteri</div>
                            <span class="badge bg-soft-primary text-primary rounded-pill">+5.2%</span>
                        </div>
                        <h3 class="fw-bold mb-0">1,240</h3>
                        <small class="text-muted">Bu ay kazanılan</small>
                    </div>
                </div>
            </div>
             <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-muted small fw-bold text-uppercase">Aktif Projeler</div>
                            <span class="badge bg-soft-warning text-warning rounded-pill">Sabit</span>
                        </div>
                        <h3 class="fw-bold mb-0">48</h3>
                        <small class="text-muted">Devam eden</small>
                    </div>
                </div>
            </div>
             <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                         <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-muted small fw-bold text-uppercase">Memnuniyet</div>
                            <span class="badge bg-soft-danger text-danger rounded-pill">-1.2%</span>
                        </div>
                        <div id="chart-satisfaction" style="min-height: 100px; margin-top: -20px; margin-bottom: -20px;"></div>
                        <div class="text-center mt-2"><small class="text-muted fw-bold">76/100 Skor</small></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Area Chart -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0 d-flex justify-content-between align-items-center">
                        <h5 class="fw-bold mb-0">Yıllık Gelir Analizi</h5>
                    </div>
                    <div class="card-body">
                        <div id="chart-revenue"></div>
                    </div>
                </div>
            </div>
            
            <!-- Donut Chart -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold mb-0">Müşteri Segmentasyonu</h5>
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div id="chart-category" class="w-100"></div>
                    </div>
                </div>
            </div>

            <!-- Bar Chart -->
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold mb-0">Şube Performans Sıralaması</h5>
                    </div>
                    <div class="card-body">
                        <div id="chart-branch"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-success { background-color: #d1fae5; }
    .bg-soft-primary { background-color: #dbeafe; }
    .bg-soft-warning { background-color: #fef3c7; }
    .bg-soft-danger { background-color: #fee2e2; }
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("renderAreaChart", "chart-revenue");
            await JSRuntime.InvokeVoidAsync("renderDonutChart", "chart-category");
            await JSRuntime.InvokeVoidAsync("renderBarChart", "chart-branch");
            await JSRuntime.InvokeVoidAsync("renderRadialChart", "chart-satisfaction");
        }
    }
}
