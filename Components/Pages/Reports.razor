@page "/reports"

<div class="p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Raporlama Merkezi</h1>
        <button class="btn btn-outline-primary"><span class="bi bi-download"></span> Tümünü İndir</button>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Yıllık Satış Grafiği</h5>
                    <div class="bg-light mt-3 d-flex align-items-center justify-content-center" style="height: 200px; border: 2px dashed #ddd;">
                        <span class="text-muted italic">Grafik yükleniyor...</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Şube Performansları</h5>
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">İstanbul <span class="badge bg-success rounded-pill">%92</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">Ankara <span class="badge bg-primary rounded-pill">%85</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">İzmir <span class="badge bg-warning rounded-pill">%78</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
