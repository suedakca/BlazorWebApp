@code {
    private string poolDisplayName = "Proje Yönetimi";
    private string poolDescription = "Aktif proje takip ve bütçe yönetim havuzu";
    private bool isLoading = true;
    private bool showSummary = false;
    private int totalCount = 0;
    private string searchTerm = "";
    
    [SupplyParameterFromQuery]
    public string? q { get; set; }

    private Virtualize<ProjectRecord>? virtualizeComponent;

    protected override async Task OnInitializedAsync()
    {
        // Check if we have a saved state for this tab (e.g. from a previous visit)
        var activeTab = TabService.Tabs.FirstOrDefault(t => t.IsActive);
        if (activeTab != null && activeTab.State.ContainsKey("showSummary"))
        {
            // Restore the "Summary View" toggle state
            showSummary = (bool)activeTab.State["showSummary"];
        }

        // Sync query param to local search term if present
        if (!string.IsNullOrEmpty(q))
        {
            searchTerm = q;
        }

        // Minimal delay to ensure UI renders loading state if needed, though usually not strictly necessary with EF
        await Task.Yield();
        isLoading = false;
    }

    protected override async Task OnParametersSetAsync()
    {
        if (q != searchTerm)
        {
            searchTerm = q ?? "";
            if (virtualizeComponent != null)
            {
                await virtualizeComponent.RefreshDataAsync();
            }
        }
    }

    private void ToggleSummary()
    {
        showSummary = !showSummary;
        
        var activeTab = TabService.Tabs.FirstOrDefault(t => t.IsActive);
        if (activeTab != null)
        {
            // Save the new state so we can restore it later if the user switches tabs
            activeTab.State["showSummary"] = showSummary;
        }
    }

    private async Task HandleFilterChanged(FilterBar.FilterCriteria criteria)
    {
        // In this demo, we just refresh the data grid.
        // Real implementation would pass criteria to LoadData or Filter the query.
        if (virtualizeComponent != null)
        {
            await virtualizeComponent.RefreshDataAsync();
        }
    }

    private async Task SearchData()
    {
        if (virtualizeComponent != null)
        {
            await virtualizeComponent.RefreshDataAsync();
        }
    }

    private async ValueTask<ItemsProviderResult<ProjectRecord>> LoadData(ItemsProviderRequest request)
    {
         var result = await PoolService.GetProjectRecordsAsync(0, 1000); // Get all for client-side filtering (demo)
         
         var filteredItems = result.Items;
         
         if (!string.IsNullOrWhiteSpace(searchTerm))
         {
             filteredItems = filteredItems.Where(x => 
                (x.ProjectName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (x.CustomerName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
             ).ToList();
         }

         totalCount = filteredItems.Count;
         
         // Slice for pagination
         var pagedItems = filteredItems.Skip(request.StartIndex).Take(request.Count).ToList();

        return new ItemsProviderResult<ProjectRecord>(pagedItems, totalCount);
    }

    private string GetStatusColor(string? status)
    {
        return status switch
        {
            "Active" => "#3b82f6", // Blue
            "Completed" => "#10b981", // Green
            "On Hold" => "#f59e0b", // Orange
            "Pending" => "#6b7280", // Gray
            _ => "#6b7280"
        };
    }
    
    private string GetProgressBarColor(int progress)
    {
        if (progress >= 100) return "success";
        if (progress > 50) return "primary";
        if (progress > 20) return "info";
        return "warning";
    }

    private async Task ExportExcel()
    {
        if (totalCount == 0) return;
        
        var (items, count) = await PoolService.GetProjectRecordsAsync(0, 1000); 
        
        var sb = new System.Text.StringBuilder();
        sb.AppendLine("ID;PROJE DETAYLARI;DURUM;BÜTÇE;İLERLEME;TESLİM");
        
        foreach (var item in items)
        {
             var rowValues = new List<string>
             {
                 item.Id.ToString(),
                 $"{item.ProjectName} - {item.CustomerName}",
                 item.Status,
                 item.Budget.ToString("N0"),
                 item.Progress.ToString(),
                 item.DueDate.ToString("yyyy-MM-dd")
             };
             
             sb.AppendLine(string.Join(";", rowValues));
        }

        await JSRuntime.InvokeVoidAsync("downloadFile", "projects_export.csv", "text/csv", sb.ToString());
    }
}
