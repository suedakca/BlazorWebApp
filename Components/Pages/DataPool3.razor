                                        <span class="text-muted ms-2 x-small">Geçen aya göre</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rental Izmir -->
                        <div class="col-12 col-md-6 col-lg-3">
                             <div class="stat-card p-3 rounded-3 bg-white shadow-sm border-0 d-flex flex-column h-100 position-relative overflow-hidden">
                                <div class="stat-icon-bg bg-success text-success bg-opacity-10">
                                    <i class="bi bi-building-check"></i>
                                </div>
                                <div class="position-relative z-1">
                                     <div class="text-secondary small fw-bold mb-1 tracking-wide">DOLULUK (İZMİR)</div>
                                    <h3 class="fw-bold text-dark mb-1">%88</h3>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 88%"></div>
                                        </div>
                                        <span class="text-muted ms-2 fw-medium x-small">1.250 Ünite</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rental Antalya -->
                         <div class="col-12 col-md-6 col-lg-3">
                             <div class="stat-card p-3 rounded-3 bg-white shadow-sm border-0 d-flex flex-column h-100 position-relative overflow-hidden">
                                <div class="stat-icon-bg bg-warning text-warning bg-opacity-10">
                                    <i class="bi bi-sun"></i>
                                </div>
                                <div class="position-relative z-1">
                                     <div class="text-secondary small fw-bold mb-1 tracking-wide">DOLULUK (ANTALYA)</div>
                                    <h3 class="fw-bold text-dark mb-1">%94</h3>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1" style="height: 6px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 94%"></div>
                                        </div>
                                        <span class="text-muted ms-2 fw-medium x-small">850 Ünite</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

