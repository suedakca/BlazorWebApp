@page "/data-pool-3"
@rendermode InteractiveServer
@using BlazorWebApp.Services
@using BlazorWebApp.Models
@inject PoolService PoolService
@inject TabService TabService
@inject IJSRuntime JSRuntime

<PageTitle>Proje Yönetim Havuzu | @poolDisplayName</PageTitle>

<div class="h-100 w-100 d-flex flex-column bg-white">
    <!-- Modern Header -->
    <div class="px-4 py-3 border-bottom d-flex justify-content-between align-items-center bg-white sticky-top">
        <div class="d-flex align-items-center gap-3">
            <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                <i class="bi bi-kanban fs-4"></i>
            </div>
            <div>
                <h5 class="fw-bold text-dark mb-0">@poolDisplayName</h5>
                <small class="text-muted">@poolDescription</small>
            </div>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <!-- Toggle Summary Button -->
             <button class="btn btn-sm @(showSummary ? "btn-secondary" : "btn-outline-primary") shadow-sm" @onclick="ToggleSummary">
                 <i class="bi @(showSummary ? "bi-eye-slash" : "bi-eye") me-1"></i>
                 @(showSummary ? "Özeti Gizle" : "Özet Verileri Göster")
            </button>
             <button class="btn btn-sm btn-primary shadow-sm" @onclick="ExportExcel">
                <i class="bi bi-download me-1"></i>Dışa Aktar
            </button>
        </div>
    </div>

    <!-- Data Grid -->
    <div class="flex-grow-1 bg-light p-3 d-flex flex-column" style="min-height: 0;">
        <div class="card border-0 shadow-sm flex-grow-1 overflow-hidden">
            <div class="card-body p-0 d-flex flex-column h-100">
                 <div class="flex-grow-1 overflow-auto">
                     <table class="table table-hover mb-0 align-middle" style="font-size: 0.85rem;">
                        <thead class="bg-light sticky-header">
                            <tr>
                                <th class="text-center fw-bold text-muted" style="width: 60px;">#</th>
                                <th style="width: 250px;">PROJE DETAYLARI</th>
                                <th class="text-center" style="width: 120px;">DURUM</th>
                                <th class="text-end" style="width: 150px;">BÜTÇE</th>
                                <th style="width: 200px;">İLERLEME</th>
                                <th style="width: 150px;">EKİP</th>
                                <th style="width: 120px;">TESLİM</th>
                                <th class="text-center" style="width: 100px;">İŞLEM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (isLoading)
                            {
                                <tr>
                                    <td colspan="8" class="text-center p-5">
                                        <div class="spinner-border text-primary" role="status"></div>
                                        <p class="mt-2 text-muted">Projeler yükleniyor...</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                 <Virtualize ItemsProvider="LoadData" Context="item" @ref="virtualizeComponent">
                                    <ItemContent>
                                        <tr>
                                            <!-- ID -->
                                            <td class="text-center fw-bold text-muted">@item.Id</td>
                                            
                                            <!-- Project Details -->
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold text-dark">@item.ProjectName</span>
                                                    <span class="small text-muted text-truncate" style="max-width: 250px;">@item.CustomerName</span>
                                                </div>
                                            </td>

                                            <!-- Status -->
                                            <td class="text-center">
                                                @{
                                                    var statusColor = GetStatusColor(item.Status);
                                                }
                                                <span class="badge rounded-pill" style="background-color: @(statusColor)20; color: @statusColor; border: 1px solid @(statusColor)40;">
                                                    <i class="bi bi-dot me-1"></i>@item.Status
                                                </span>
                                            </td>

                                            <!-- Budget -->
                                            <td class="text-end font-monospace fw-bold text-dark">
                                                @item.Budget.ToString("N0") ₺
                                            </td>

                                            <!-- Progress -->
                                            <td>
                                                @{
                                                    var progressColor = GetProgressBarColor(item.Progress);
                                                }
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress w-100" style="height: 6px;">
                                                        <div class="progress-bar bg-@progressColor" style="width: @item.Progress%"></div>
                                                    </div>
                                                    <span class="small text-muted fw-bold">@item.Progress%</span>
                                                </div>
                                            </td>

                                            <!-- Team -->
                                            <td>
                                                <div class="avatar-group d-flex">
                                                    @for(int i=0; i<3; i++) {
                                                        <div class="avatar-circle border border-white" style="position: relative; width:24px; height:24px; border-radius:50%; background:#ccc; margin-left:-8px; z-index:@(10-i)"></div>
                                                    }
                                                </div>
                                            </td>

                                            <!-- Due Date -->
                                            <td class="text-muted small">
                                                <i class="bi bi-calendar2-week me-1"></i>@item.DueDate.ToString("dd MMM yyyy")
                                            </td>

                                            <!-- Actions -->
                                            <td class="text-center">
                                                <div class='dropdown'>
                                                    <button class='btn btn-link text-muted p-0' data-bs-toggle='dropdown'>
                                                        <i class='bi bi-three-dots-vertical'></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    </ItemContent>
                                    <Placeholder>
                                         <tr>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                            <td><div class="placeholder-glow"><span class="placeholder col-12"></span></div></td>
                                        </tr>
                                    </Placeholder>
                                </Virtualize>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Summary Modal -->
@if (showSummary)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold text-dark">
                        <i class="bi bi-graph-up me-2 text-primary"></i>Özet Veriler
                    </h5>
                    <button type="button" class="btn-close" @onclick="ToggleSummary"></button>
                </div>
                <div class="modal-body p-4 bg-light">
                    <div class="row g-3">
                        <!-- Total Sales Istanbul -->
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="stat-card p-3 rounded-3 bg-white shadow-sm border-0 d-flex flex-column h-100 position-relative overflow-hidden">
                                <div class="stat-icon-bg bg-primary text-primary bg-opacity-10">
                                    <i class="bi bi-currency-dollar"></i>
                                </div>
                                <div class="position-relative z-1">
                                    <div class="text-secondary small fw-bold mb-1 tracking-wide">TOPLAM SATIŞ (İST)</div>
                                    <h3 class="fw-bold text-dark mb-1">₺14.2M</h3>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success-subtle text-success rounded-pill px-2 py-1 small">
                                            <i class="bi bi-arrow-up-short"></i> %12
                                        </span>
                                        <span class="text-muted ms-2 x-small">Geçen aya göre</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Total Sales Ankara -->
                        <div class="col-12 col-md-6 col-lg-3">
                             <div class="stat-card p-3 rounded-3 bg-white shadow-sm border-0 d-flex flex-column h-100 position-relative overflow-hidden">
                                <div class="stat-icon-bg bg-danger text-danger bg-opacity-10">
                                    <i class="bi bi-graph-down"></i>
                                </div>
                                <div class="position-relative z-1">
                                    <div class="text-secondary small fw-bold mb-1 tracking-wide">TOPLAM SATIŞ (ANK)</div>
                                    <h3 class="fw-bold text-dark mb-1">₺7.1M</h3>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-danger-subtle text-danger rounded-pill px-2 py-1 small">
                                            <i class="bi bi-arrow-down-short"></i> %5
